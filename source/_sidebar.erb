<div id="sidebar">
  <h2>Scholarship Areas</h2>
  <ul>
      <li class="important"><%= link_to 'Religious History', '/research.html' %></li>
      <li class="important"><%= link_to 'Digital History', '/digital.html' %></li>
      <li class="important"><%= link_to 'Teaching', '/teaching.html' %></li>
  </ul>
  <h2>Recent Posts</h2>
  <ul>
  <% blog.articles[0...3].each do |article| %>
    <li><%= link_to article.title, article %>, <span><%= article.date.strftime('%b %e') %></span></li>
  <% end %>
  </ul>

  <h2>Posts by Category</h2>
  <ul>
    <% blog.tags.each do |tag, articles| %>
      <li><%= link_to "#{tag} (#{articles.size})", tag_path(tag) %></li>
    <% end %>
  </ul>
</div>
